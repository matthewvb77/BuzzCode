{
	"name": "buzzcode",
	"displayName": "BuzzCode",
	"description": "Provides AI-assisted task automation",
	"publisher": "BuzzCode",
	"version": "0.0.5",
	"icon": "resources/BuzzCode_logo.png",
	"engines": {
		"vscode": "^1.77.3"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "buzzcode.settings",
				"category": "BuzzCode",
				"title": "Settings",
				"icon": "$(settings-gear)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "buzzcode-sidebar-view",
					"title": "BuzzCode",
					"icon": "resources/sidebar_icon.svg"
				}
			]
		},
		"views": {
			"buzzcode-sidebar-view": [
				{
					"type": "webview",
					"id": "buzzcode-sidebar",
					"name": "BuzzCode",
					"icon": "resources/buzzcode_icon.png",
					"contextualTitle": "BuzzCode"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "buzzcode.settings",
					"when": "view == buzzcode-sidebar",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"title": "BuzzCode",
			"properties": {
				"buzzcode.openaiApiKey": {
					"type": "string",
					"default": "",
					"description": "GitHub Copilot API key"
				},
				"buzzcode.model": {
					"type": "string",
					"default": "gpt-3.5-turbo",
					"description": "Name of the OpenAI Model to use"
				},
				"buzzcode.temperature": {
					"type": "number",
					"default": 0.2,
					"description": "Temperature value for the generated code"
				},
				"buzzcode.continuousMode": {
					"type": "boolean",
					"default": false,
					"description": "Whether to warn before executing terminal commands or generating files"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"rebuild": "electron-rebuild -f -w node-pty"
	},
	"devDependencies": {
		"@types/chai": "^4.3.5",
		"@types/chai-as-promised": "^7.1.5",
		"@types/fs-extra": "^11.0.1",
		"@types/glob": "^8.0.1",
		"@types/mocha": "^10.0.1",
		"@types/node": "^16.18.32",
		"@types/sinon": "^10.0.15",
		"@types/vscode": "^1.77.0",
		"@typescript-eslint/eslint-plugin": "^5.49.0",
		"@typescript-eslint/parser": "^5.49.0",
		"@vscode/test-electron": "^2.3.2",
		"chai": "^4.3.7",
		"chai-as-promised": "^7.1.1",
		"electron-rebuild": "^3.2.9",
		"eslint": "^8.33.0",
		"fs-extra": "^11.1.1",
		"glob": "^8.1.0",
		"mocha": "^10.2.0",
		"nock": "^13.3.1",
		"sinon": "^15.1.0",
		"ts-loader": "^9.4.2",
		"typescript": "^4.9.4",
		"vscode-test": "^1.6.1",
		"webpack-cli": "^5.0.1"
	},
	"dependencies": {
		"@types/merge2": "^1.4.0",
		"@types/tmp": "^0.2.3",
		"@vscode/codicons": "^0.0.32",
		"abort-controller": "^3.0.0",
		"axios": "^1.3.5",
		"dotenv": "^16.0.3",
		"merge2": "^1.4.1",
		"npm": "^9.9.2",
		"openai": "^4.17.5",
		"tmp": "^0.2.1",
		"ts-node": "^10.9.1",
		"vscode-codicons": "^0.0.17"
	}
}
