{
	"name": "testwise",
	"displayName": "TestWise",
	"description": "Enhances TDD with Copilot",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.75.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "testwise.helloWorld",
				"category": "TestWise",
				"title": "Hello World"
			},
			{
				"command": "testwise.codeForMe",
				"category": "TestWise",
				"title": "Code For Me"
			},
			{
				"command": "testwise.settings",
				"category": "TestWise",
				"title": "Settings"
			}
		],
		"configuration": {
			"title": "TestWise",
			"properties": {
				"testwise.apiKey": {
					"type": "string",
					"default": "",
					"description": "GitHub Copilot API key"
				},
				"testwise.maxTokens": {
					"type": "number",
					"default": 100,
					"description": "Maximum number of tokens for the generated code"
				},
				"testwise.temperature": {
					"type": "number",
					"default": 0.2,
					"description": "Temperature value for the generated code"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^8.0.1",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.75.0",
		"@typescript-eslint/eslint-plugin": "^5.49.0",
		"@typescript-eslint/parser": "^5.49.0",
		"@vscode/test-electron": "^2.2.2",
		"eslint": "^8.33.0",
		"glob": "^8.1.0",
		"mocha": "^10.1.0",
		"ts-loader": "^9.4.2",
		"typescript": "^4.9.4",
		"webpack": "^5.75.0",
		"webpack-cli": "^5.0.1"
	},
	"dependencies": {
		"dotenv": "^16.0.3",
		"openai": "^3.2.1"
	}
}
